{
	"name": "server",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "nodemon",
		"build": "node ./esbuild.config.js",
		"start": "node --loader=extensionless ./dist/index.js"
	},
	"nodemonConfig": {
		"watch": "src",
		"ignore": [
			"dist/**",
			"node_modules/**"
		],
		"ext": "ts",
		"exec": "rm -rf ./dist && pnpm node ./esbuild.config.js && node --loader=extensionless ./dist/index.js | pnpm pino-pretty --singleLine"
	},
	"dependencies": {
		"@fastify/autoload": "^6.1.0",
		"@fastify/cors": "^10.0.2",
		"@fastify/env": "^5.0.2",
		"@fastify/middie": "^9.0.3",
		"@sinclair/typebox": "^0.34.16",
		"dotenv": "^16.4.7",
		"dotenv-safe": "^9.1.0",
		"extensionless": "^1.9.9",
		"fastify": "^5.2.1",
		"fastify-graceful-shutdown": "^4.0.1",
		"fastify-plugin": "^5.0.1",
		"graphql": "^16.10.0",
		"graphql-yoga": "^5.12.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router": "^7.1.5",
		"vite": "^6.1.0"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^5.0.5",
		"@graphql-codegen/schema-ast": "^4.1.0",
		"@graphql-codegen/typescript": "^4.1.4",
		"@graphql-codegen/typescript-resolvers": "^4.4.3",
		"@types/node": "^22.13.1",
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0",
		"esbuild": "^0.24.2",
		"nodemon": "^3.1.9",
		"pino-pretty": "^13.0.0",
		"relay-compiler": "^18.2.0",
		"typescript": "^5.7.3"
	}
}
